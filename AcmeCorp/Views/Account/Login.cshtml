@using AcmeCorp.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <form asp-antiforgery="true">
                <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                @Html.AntiForgeryToken()
                <h4>Use a local account to log in.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2" asp-for="Email"></label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" placeholder="@Html.DisplayName("Email")" asp-for="Email">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" asp-for="Email"></label>
                    <div class="col-md-10">
                        <input type="password" class="form-control" placeholder="@Html.DisplayName("Password")" asp-for="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input type="checkbox" asp-for="RememberMe" />
                            <label asp-for="RememberMe"></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-primary" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Register as a new user", "Register")
                </p>
               
            </form>
        </section>
    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            
        </section>
    </div>
</div>

@section Scripts {
}