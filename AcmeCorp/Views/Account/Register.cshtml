@model AcmeCorp.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

<form asp-antiforgery="true">
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" asp-for="Email"></label>
        <div class="col-md-10">
            <input type="text" class="form-control" placeholder="@Html.DisplayName("Email")" asp-for="Email">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" asp-for="Password"></label>
        <div class="col-md-10">
            <input type="password" class="form-control" placeholder="@Html.DisplayName("Password")" asp-for="Password">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" asp-for="ConfirmPassword"></label>
        <div class="col-md-10">
            <input type="password" class="form-control" placeholder="@Html.DisplayName("ConfirmPassword")" asp-for="ConfirmPassword">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Register" />
        </div>
    </div>
</form>

@section Scripts {
}
