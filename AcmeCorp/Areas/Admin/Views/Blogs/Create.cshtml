@model AcmeCorp.Data.Models.Blogs

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Blogs";
}


<div class="container pt-md-5">
    <div class="row mb-5 align-items-center">
        <div class="col-12">
            <div class="card">
                <form asp-antiforgery="true">
                    <div class="card-header">
                        <h5 class="card-title">@ViewData["Title"]</h5>
                    </div>
                    <div class="card-body">

                        <div class="form-group row">
                            <label class="col-12 col-lg-3 col-form-label" asp-for="Title"></label>
                            <div class="col-12 col-lg-9">
                                <div class="input-group">
                                    <input type="text" asp-for="Title" class="form-control" placeholder="@Html.DisplayNameFor(o => o.Title)" />
                                    <div class="invalid-feedback d-block">
                                        <span asp-validation-for="Title"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label class="col-12 col-lg-3 col-form-label" asp-for="ShortDescription"></label>
                            <div class="col-12 col-lg-9">
                                <div class="input-group">
                                    <input type="text" asp-for="ShortDescription" class="form-control" placeholder="@Html.DisplayNameFor(o => o.ShortDescription)" />
                                    <div class="invalid-feedback d-block">
                                        <span asp-validation-for="ShortDescription"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label class="col-12 col-lg-3 col-form-label" asp-for="ImageUrl"></label>
                            <div class="col-2 col-lg-2">

                            <img class="img-thumbnail image-preview" src="~/Content/Images/NoImage.png" alt="Logo of chosen game" id="previewImage">
                            </div>
                            <div class="col-8 col-lg-7">
                                <div class="input-group">
                                    <select asp-for="ImageUrl" id="selectImageUrl" class="form-select" onchange="changeImage()"/>
                                      <option value="NoImage.png" selected>No image selected</option>
                                      @foreach(var image in ViewBag.Images)
                                        {
                                            <option value ="@image.Name">@image.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-lg-3 col-form-label" asp-for="Active"></label>
                            <div class="col-12 col-lg-9">
                                <div class="input-group">

                                    <input class="form-check-input" type="checkbox" value="true" id="activeCheck" asp-for="Active">       
                                    <span class="help-note" asp-validation-for="Active"> * This will not be published and have no release date set until made active. Blog can be edited and set to active at a later date.</span>
                                    <div class="invalid-feedback d-block">
                                    </div>
                                </div>
                            </div>
                        </div>
                        

                    </div>
                    <div class="card-footer">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function changeImage() {
  var gameValue = document.getElementById("selectImageUrl").value;
  document.getElementById("previewImage").src = "/Content/Images/" + gameValue;
}
</script>